  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Log da requisição",
          "console.log(`🚀 Executando: ${pm.info.requestName}`);",
          "console.log(`📡 ${pm.request.method} ${pm.request.url}`);",
          "",
          "// Adiciona timestamp",
          "pm.globals.set('timestamp', new Date().toISOString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Testes globais para todas as requisições",
          "pm.test('⏱️ Response time is reasonable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('📡 Content-Type is correct', function () {",
          "    if (pm.response.code !== 204) {",
          "        pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "    }",
          "});",
          "",
          "pm.test('🔒 Security headers present', function () {",
          "    if (pm.response.code === 200) {",
          "        // Verifica se há headers de segurança básicos",
          "        console.log('Response headers:', pm.response.headers);",
          "    }",
          "});",
          "",
          "// Log da resposta",
          "console.log(`✅ Status: ${pm.response.code} ${pm.response.status}`);",
          "console.log(`⏱️ Time: ${pm.response.responseTime}ms`);",
          "",
          "// Log de erro se houver",
          "if (pm.response.code >= 400) {",
          "    console.error(`❌ Error Response:`, pm.response.json());",
          "}"
        ]
      }
    }
  ]
}